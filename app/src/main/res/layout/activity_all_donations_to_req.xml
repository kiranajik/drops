<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".allDonationsToReq">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="338dp"
            android:layout_height="46dp"
            android:layout_marginTop="60dp"
            android:text="All Donations"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/nd2_prim"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alldonrecview"
            android:layout_width="384dp"
            android:layout_height="608dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvreqId"
            app:layout_constraintVertical_bias="0.21"
            tools:listitem="@layout/donlistitem" />

        <TextView
            android:id="@+id/tvreqId"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="ReqId"
            android:textAlignment="center"
            android:textColor="@color/ho_bg"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
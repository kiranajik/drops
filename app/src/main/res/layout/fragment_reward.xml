<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".org_login">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="357dp"
        android:layout_height="0dp"
        android:layout_marginTop="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/listitem">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/redrewtext"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="My Rewards"
        android:textColor="#575757"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/redrewbtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="-8dp"
        app:layout_constraintBottom_toBottomOf="@+id/redrewtext"
        app:layout_constraintEnd_toStartOf="@+id/redrewbtn2"
        app:layout_constraintTop_toTopOf="@+id/redrewtext"
        app:layout_constraintVertical_bias="0.49"
        app:srcCompat="@drawable/lib1" />

    <ImageView
        android:id="@+id/redrewbtn2"
        android:layout_width="90dp"
        android:layout_height="91dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/redrewbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/redrewbtn"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/finku" />

    <TextView
        android:id="@+id/coincount"
        android:layout_width="57dp"
        android:layout_height="19dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/donationcardbg"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/redrewbtn2"
        app:layout_constraintEnd_toEndOf="@+id/redrewbtn2"
        app:layout_constraintTop_toTopOf="@+id/redrewbtn2"
        app:layout_constraintVertical_bias="0.361" />

</androidx.constraintlayout.widget.ConstraintLayout>
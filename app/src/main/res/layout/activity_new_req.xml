<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_Req">

    <Button
        android:id="@+id/new_req_submit_btn"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2F88FF"
        android:text="Submit"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReqID"
        app:layout_constraintVertical_bias="0.876" />

    <TextView
        android:id="@+id/AddReqText"
        android:layout_width="292dp"
        android:layout_height="49dp"
        android:text="Add a Requirement"
        android:textColor="#020202"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.336"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14" />

    <EditText
        android:id="@+id/EndTime"
        android:layout_width="213dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="End Time"
        android:inputType="time"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/NoBottles"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/NoBottles"
        app:layout_constraintTop_toBottomOf="@+id/NoBottles" />

    <TextView
        android:id="@+id/ReqID"
        android:layout_width="213dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:hint="Requirement ID"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/ReqDesc"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ReqDesc"
        app:layout_constraintTop_toBottomOf="@+id/ReqDesc" />

    <EditText
        android:id="@+id/reqPurspose"
        android:layout_width="213dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Requirement Purpose"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/EndTime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/EndTime"
        app:layout_constraintTop_toBottomOf="@+id/EndTime" />

    <EditText
        android:id="@+id/ReqDesc"
        android:layout_width="213dp"
        android:layout_height="88dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Requirement Description"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/reqPurspose"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reqPurspose"
        app:layout_constraintTop_toBottomOf="@+id/reqPurspose" />

    <EditText
        android:id="@+id/NoBottles"
        android:layout_width="213dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Required Bottles"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/BGroupDD"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/BGroupDD"
        app:layout_constraintTop_toBottomOf="@+id/BGroupDD" />

    <Spinner
        android:id="@+id/BGroupDD"
        android:layout_width="213dp"
        android:layout_height="58dp"
        android:layout_marginTop="188dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>